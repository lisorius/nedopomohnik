import random
def calculator():
    num1 = float(input("Enter the first number: "))
    num2 = float(input("Enter the second number: "))
    operation = input("Enter the operation (+, -, *, /): ")

    if operation == '+':
        return num1 + num2
    elif operation == '-':
        return num1 - num2
    elif operation == '*':
        return num1 * num2
    elif operation == '/':
        return num1 / num2
    else:
        return "Invalid operation"
def guess_number():
    number = random.randint(1, 100) # загадываем число от 1 до 100
    attempts = 0 # счетчик попыток
    while True:
        guess = int(input("guess the number from 1 to 100: "))
        attempts += 1
        if guess < number:
            print("Загаданное число больше")
        elif guess > number:
            print("The hidden number is greater")
        else:
            print(f"Congratulations! You guessed the number {number} behind {attempts} attempts.")
            break


